@model BlogCore.Models.Articulo

@{
	ViewData["Title"] = "Crear Articulo";
}


<br />
<br />
<br />
<h3 class="text-center">Crear un nuevo articulo</h3>
<form method="post" asp-action="Create">
	<div class="row px-2 offset-1 border">
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="col-10 offset-1 mt-4">
			<div class="form-group row">
				<div class="col-4">
					<label asp-for="Nombre"></label>
				</div>
				<div class="col-8">
					<input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre" />
					<span asp-validation-for="Nombre" class="text-danger"></span>
				</div>
			</div>
			<br />
			<div class="form-group row">
				<div class="col-4">
					<label asp-for="Descripcion"></label>
				</div>
				<div class="col-8">
					<input asp-for="Descripcion" class="form-control" placeholder="Ingresa la descripcion" />
					<span asp-validation-for="Descripcion" class="text-danger"></span>
				</div>
			</div>
			<br />
			<div class="form-group row">
				<div class="col-4">
					<label asp-for="FechaCreacion"></label>
				</div>
				<div class="col-8">
					<input asp-for="FechaCreacion" class="form-control" placeholder="Ingresa el nombre" />
					<span asp-validation-for="FechaCreacion" class="text-danger"></span>
				</div>
			</div>
			<br />
			<div class="form-group row">
				<div class="col-4">
					<label asp-for="UrlImagen"></label>
				</div>
				<div class="col-8">
					<input asp-for="UrlImagen" class="form-control" placeholder="Ingresa la imagen" />
					<span asp-validation-for="UrlImagen" class="text-danger"></span>
				</div>
			</div>
			<br />
			
			<div class="form-group-row">
				<div class="col-8">
					<partial name="_VistaCrearVolver" />
				</div>
			</div>

		</div>
	</div>
</form>

@section Scripts {
	@{
				<partial name="_ValidationScriptsPartial" />
	}
}